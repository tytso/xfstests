#
# FS QA Test No. 060
#
# Test multi-stream xfsdump and restoring one stream at a time.
#
. ./common/test_names
_set_seq_and_groups dump ioctl auto quick

status=0	# success is the default!
trap "_cleanup; exit \$status" 0 1 2 3 15

_cleanup()
{
	_cleanup_dump
	cd /
	rm -f $tmp.*
}

# get standard environment, filters and checks
. ./common/rc
. ./common/dump

# real QA test starts here
_supported_fs xfs

_require_multi_stream

_create_dumpdir_fill_multi
_do_dump_multi_file --multi 4
_prepare_restore_dir
base=$dump_file
opts=""
for x in 0 1 2 3; do
    _do_restore_file_cum -f $base.$x $opts
    opts=-R
done
_ls_compare_sub
_diff_compare

# success, all done
exit
