# FS QA Test No. 036
#
# Test xfsdump/restore minrmt to a remote IRIX tape 
#
seqfull=$0
. ./common/test_names
_set_seq_and_groups dump ioctl remote tape

trap "_cleanup; exit \$status" 0 1 2 3 15

_cleanup()
{
	_cleanup_dump
	cd /
	rm -f $tmp.*
}

# get standard environment, filters and checks
. ./common/rc
. ./common/dump

# real QA test starts here
_supported_fs xfs

_require_tape $RMT_IRIXTAPE_DEV
_create_dumpdir_fill
_erase_soft
_do_dump_min -o -F
_do_restore_min
_diff_compare

# success, all done
status=0
exit
