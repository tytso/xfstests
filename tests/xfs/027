# FS QA Test No. 027
#
# Test out "xfsdump | xfsrestore"
#
. ./common/test_names
_set_seq_and_groups dump ioctl auto quick

status=0	# success is the default!
trap "_cleanup; exit \$status" 0 1 2 3 15

_cleanup()
{
	_cleanup_dump
	cd /
	rm -f $tmp.*
}

# get standard environment, filters and checks
. ./common/rc
. ./common/dump

# real QA test starts here
_supported_fs xfs

_create_dumpdir_fill
_do_dump_restore
_diff_compare_sub

# success, all done
exit
